@model learner_portal.Models.Institution

        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="progressbarwizard">
                <div class="tab-content mb-0 b-0">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <b>@Html.DisplayNameFor(model => model.InstitutionCode):</b>
                                <div class="form-control form-control-feedback h-auto p-3">
                                    @Html.DisplayFor(model => model.InstitutionCode)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <b>@Html.DisplayNameFor(model => model.InstitutionName):</b>
                                <div class="form-control form-control-feedback h-auto p-3">
                                    @Html.DisplayFor(model => model.InstitutionName)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <b>@Html.DisplayNameFor(model => model.InstitutionTypeId):</b>
                                <div class="form-control form-control-feedback h-auto p-3">
                                    @Html.DisplayFor(model => model.InstitutionType.InstitutionTypeDesc)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <input type="hidden" asp-for="InstitutionId"/>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger mr-1"/>
                </div>
        </form>
