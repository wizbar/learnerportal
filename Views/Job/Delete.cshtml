                        @Html.DisplayFor(model => model.Sector.SectorDesc)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.JobTypeId):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.JobType.JobTypeDesc)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.ProvinceId):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.Province.ProvinceName)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="JobId"/>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger mr-1"/>
    </div>
</form>