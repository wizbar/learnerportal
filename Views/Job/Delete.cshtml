    <div class="tab-content mb-0 b-0">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.CompanyId):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.Company.CompanyId)
                    </div>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.JobCode):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.JobCode)
                    </div>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.JobTitle):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.JobTitle)
                    </div>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.OfoId):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.Ofo.OfoTitle)
                    </div>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.JobDesc):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.JobDesc)
                    </div>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.ListedDate):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.ListedDate)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.ExpiryDate):</b>
