@model learner_portal.Models.Document

<h3 class="text-warning mb-3">Verify this document?</h3>
    <div class="row mb-2 mt-3 justify-content-center">
        <div class="form-group">
            @*<b>@Html.DisplayNameFor(model => model.DocumentTypeId):</b>*@
            <strong>@(Model.DocumentType.TypeName)</strong>
        </div>
</div>
<div class="row mb-2 justify-content-center">
        <div class="form-group">
            @*<b>@Html.DisplayNameFor(model => model.DocumentTypeId):</b>*@
            <strong class="text-muted"><i class="fa fa-paperclip"></i> @(Model.FileName.Length > 30 ? Model.FileName.Substring(0, 29) + "..." : Model.FileName)</strong>
        </div>
    </div>

<span class="text-muted"> 
    <p class="font-weight-bold">
        <strong>Please note:</strong> By verifying this document, it will undergo inspection and once verified, you cannpt changeit.
    </p>
    </span>

<form asp-action="_Verify">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="LearnerId" class="form-control"/>		
    <input type="hidden" asp-for="FileName" class="form-control"/>		
    <input type="hidden" asp-for="FilePath" class="form-control"/>		
    <input type="hidden" asp-for="DocumentTypeId" class="form-control"/>	
    <textarea type="text" asp-for="Comments" class="form-control mb-5"></textarea>	
    <div id="progressbarwizard">
    </div>

    <div class="form-group">
        <input type="submit" value="Verify" class="btn btn-warning mr-1"/>
    </div>
</form>