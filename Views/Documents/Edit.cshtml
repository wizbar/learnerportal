@model learner_portal.Models.Document

<form asp-action="Edit"  asp-controller="Documents" enctype="multipart/form-data"> 
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="LearnerId" class="form-control"/>		
    <input type="hidden" asp-for="FileName" class="form-control"/>		
    <input type="hidden" asp-for="FilePath" class="form-control"/>		
   
    <div class="card-body">
        <div class="row">
			<div class="col-md-4">
				 <label asp-for="DocumentTypeId"  class="control-label font-weight-bold"></label>
				<select asp-for="DocumentTypeId" class="form-control" asp-items="ViewBag.DocumentTypeId"></select>
					<span asp-validation-for="DocumentTypeId" class="text-danger"></span>
				<div class="d-md-none mb-2"></div>
			</div>
            <div class="form-group">
                <label asp-for="MyFiles" class="control-label font-weight-bold"></label>
                <div class="col-lg-12">
                    <div class="col-lg-12" >
                        <input type="file" asp-for="MyFiles"  accept="application/pdf"/>
                        <span asp-validation-for="MyFiles" class="text-danger"></span>
                    </div>
                    <span class="form-text text-muted">Max file size is 10MB and max number of files is 1.</span>
                </div>
            </div>
        </div>
    </div>
 
    <div class="card-footer">
        <div class="row justify-content-center">
            <div class="col-lg-6 ">	
                <input type="submit" asp-for="MyFiles" value="Update" class="btn btn-primary text-md-center  font-weight-bolder btn-light-success" id="qual_save"/>
            </div>
            <div class="col-lg-6">
                <button type="reset" class="btn btn-primary text-md-center ">Cancel</button>
            </div>
        </div>
    </div>
</form>

