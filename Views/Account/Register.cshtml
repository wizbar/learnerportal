@using reCAPTCHA.AspNetCore
@using reCAPTCHA.AspNetCore.Templates
@using Microsoft.Extensions.Options
@model learner_portal.DTO.RegisterUserDto

@inject IOptions<RecaptchaSettings> RecaptchaSettings

@{

	Layout = "_Layout";
}

<div class="d-flex flex-column flex-root">
	<!--begin::Login-->
	<div class="login login-1 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
		<!--begin::Aside-->
		<div class="login-aside d-flex flex-column flex-row-auto" >
			<!--begin::Aside Top-->
			<div class="d-flex flex-column-auto flex-column pt-lg-40 pt-15" style="background-color: #3e254f;">
				<!--begin::Aside header-->
				<a href="#" class="text-center mb-15">
					<img src="~/assets/media/logos/chieta.png" alt="logo" class="h-70px" style="background-color: #3e254f;"/>
				</a>
				<!--end::Aside header-->
				<!--begin::Aside title-->
				<!--end::Aside title-->
			</div>
			<!--end::Aside Top-->
			<!--begin::Aside Bottom-->
			<div class="aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-y-bottom bgi-position-x-center" style="background-image: url(/assets/media/logos/chieta_bg.png)"></div>
			<!--end::Aside Bottom-->
		</div>
		<!--begin::Aside-->
		<!--begin::Content-->
		<div class="login-content flex-row-fluid d-flex flex-column justify-content-center position-relative overflow-hidden p-7 mx-auto">
			<!--begin::Content body-->
			<div class="d-flex flex-column-fluid flex-center">
				<!--begin::Form-->
				<form asp-controller="Account" asp-action="Register"  class="form text-white">
					<!--begin::Title-->
					<div class="pb-13 pt-lg-0 pt-5">
						<h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">Sign Up</h3>
						<p class="text-muted font-weight-bold font-size-h4">Enter your details to create your account</p>
					</div>
					<!--end::Title-->
					<!--begin::Form group-->
					<div class="form-group">
						<input asp-for="UserName" class="form-control form-control-solid h-auto p-3 rounded-lg font-size-h6" type="text" placeholder="Username" autocomplete="off" />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>	
					<div class="form-group">
						<input asp-for="Email" class="form-control form-control-solid h-auto p-3 rounded-lg font-size-h6" type="text" placeholder="Email" autocomplete="off" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<!--end::Form group-->
					<!--begin::Form group-->
					<div class="form-group">
						<input asp-for="PhoneNumber" class="form-control form-control-solid h-auto p-3 rounded-lg font-size-h6"  placeholder="PhoneNumber" autocomplete="off" />
							
					</div>
					<!--end::Form group-->
					<!--begin::Form group-->
					<div class="form-group">
						<input asp-for="Password" class="form-control form-control-solid h-auto p-3 rounded-lg font-size-h6" type="password" placeholder="Password"  autocomplete="off" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<!--end::Form group-->
					<!--begin::Form group-->
					<div class="form-group">
						<input asp-for="ConfirmPassword"  class="form-control form-control-solid h-auto p-3 rounded-lg font-size-h6" type="password" placeholder="Confirm password"  autocomplete="off" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					<!--end::Form group-->
					<!--begin::Form group--> 
					<div class="form-group">
						<label></label> 
						<div class="form-group">
							<label asp-for="Role">User Role</label>
							<select asp-for="Role" class ="form-control" asp-items="ViewBag.Name"></select>
						</div>
						<span class="form-text text-muted">Please Agree to our Terms and Conditions before we process your account.</span>
					</div>
					<div class="form-group">
						<div class="form-group">
							@(Html.Recaptcha<RecaptchaV2Checkbox>(RecaptchaSettings.Value))
						</div>
					</div>
					<div class="form-group d-flex align-items-center">
						<label class="checkbox mb-0">
							<input type="checkbox" name="agree" />
							<span></span>
						</label> 
						<div class="pl-2">I Agree the
							<a href="#" class="ml-1" data-toggle="modal" data-target="#exampleModalCenter">terms and conditions</a>
						</div>

						<!-- Modal-->
						<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLabel">AGREEMENT TO TERMS</h5> 
									</div>
									<div class="modal-body text-body">These Terms and Conditions constitute a legally binding agreement made between you, whether personally or on behalf of an entity (“you”) and [business entity name] (“we,” “us” or “our”), concerning your access to and use of the [website name.com] website as well as any other media form, media channel, mobile website or mobile application related, linked, or otherwise connected thereto (collectively, the “Site”).</div>
								</div>
							</div>
						</div>

					</div> 
					<!--end::Form group-->
					<!--begin::Form group--> 
					<div class="form-group d-flex flex-wrap pb-lg-0 pb-3">
						<input type="submit" value="Register" class="btn btn-light-success font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-5" />
						<a href="/Account/Login" class="btn font-weight-bolder font-size-h6 px-8 py-4 my-3 text-white" style="background-color: #3e254f;">Login</a>
					</div>
					<!--end::Form group-->
				</form>

				<!--end::Form-->
 

			</div>
			<!--end::Content body-->
		</div>
		<!--end::Content-->
	</div>
	<!--end::Login-->
</div>

<!--end::Main-->
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}