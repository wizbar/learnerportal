$('#kt_login_1').click(function() {
 KTApp.block('#kt_blockui_content', {
  overlayColor: 'red',
  opacity: 0.1,
  state: 'primary' // a bootstrap color
 });
			
			function Login() {
				let username = $('#Username').val();
				let password = $('#Password').val();
				
				const loginDto = {Username: username, Password: password};
				
				$.ajax({
				async: true,
				type: 'POST',
				dataType: 'JSON',
				contentType: 'application/json; charset=utf-8',
				data: JSON.stringify(loginDto),
				url: '/Account/Login',
				success: function (response) {
					if (response.success === true){
						toastr.success(response.message,'Sucess Alert', new { timeOut: 500} );
					} else {
						toastr.info(response.message,'Information Alert', new { timeOut: 500} );
					}
				},
					error: function () {
					toastr.error('There was a problem here...','Error Alert', new {timeOut: 3000});
					},
					
				});
				
			}

			    var demo1 = function () {
                    // Demo 1
                    var btn = KTUtil.getById("kt_login_1");
            
                    KTUtil.addEvent(btn, "click", function() {
                        KTUtil.btnWait(btn, "spinner spinner-right spinner-white pr-15", "Please wait");
            
                        setTimeout(function() {
                            KTUtil.btnRelease(btn);
                        }, 1000);
                    });
                }
			
			
	</script>


