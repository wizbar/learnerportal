@model learner_portal.Models.AddressType

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-12">
            <b>Address Type Name</b>
            <input asp-for="AddressTypeName" class="form-control" data-value="true"  />
            <span asp-validation-for="AddressTypeName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <b>Address Type Code</b>
            <input asp-for="AddressTypeCode" class="form-control" />
            <span asp-validation-for="AddressTypeCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>