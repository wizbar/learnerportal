@model learner_portal.Models.Learner

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-md-12">
        <label asp-for="PersonId" class="control-label"></label>
        <select asp-for="PersonId" class ="form-control" asp-items="ViewBag.PersonId"></select>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="SchoolId" class="control-label"></label>
        <select asp-for="SchoolId" class ="form-control" asp-items="ViewBag.SchoolId"></select>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="SchoolGradeId" class="control-label"></label>
        <select asp-for="SchoolGradeId" class ="form-control" asp-items="ViewBag.SchoolGradeId"></select>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="MotivationText" class="control-label"></label>
        <input asp-for="MotivationText" class="form-control" />
        <span asp-validation-for="MotivationText" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="YearSchoolCompleted" class="control-label"></label>
        <input asp-for="YearSchoolCompleted" class="form-control" />
        <span asp-validation-for="YearSchoolCompleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary mr-1"/>
        <a asp-action="Index" class="btn btn-bg-primary text-white">Back to List</a>
    </div>
</form>