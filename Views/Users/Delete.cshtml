@model learner_portal.Models.Users

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <div class="card">
        <div class="card-header">
            <h4 class="mt-8">Job Sector Details</h4>
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="progressbarwizard">

                <div class="tab-content mb-0 b-0">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <b>@Html.DisplayNameFor(model => model.UserName):</b>
                                <div class="form-control form-control-feedback h-auto p-3">
                                    @Html.DisplayFor(model => model.UserName)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <b>@Html.DisplayNameFor(model => model.Email):</b>
                                <div class="form-control form-control-feedback h-auto p-3">
                                    @Html.DisplayFor(model => model.Email)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <b>@Html.DisplayNameFor(model => model.ActiveYn):</b>
                                <div class="form-control form-control-feedback h-auto p-3">
                                    @Html.DisplayFor(model => model.ActiveYn)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <div class="row">
                    <input type="submit" value="Delete" class="btn btn-danger mr-1"/>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
