@model learner_portal.Models.LearnerCourse

    <form asp-controller="LearnerCourse" asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="LearnerCourseId"/>
         <input type="hidden" asp-for="LearnerId" class="form-control"/>

        <div class="form-group col-md-12">
            <label asp-for="InstitutionName" class="control-label"></label>
            <input asp-for="InstitutionName" class="form-control"/>
            <span asp-validation-for="InstitutionName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="CourseName" class="control-label"></label> 
            <input asp-for="CourseName" class="form-control"/>
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="DateOfCompletion" class="control-label"></label>
            <input asp-for="DateOfCompletion" class="form-control"/>
            <span asp-validation-for="DateOfCompletion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success"/>
        </div>
    </form>