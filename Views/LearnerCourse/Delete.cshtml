@model learner_portal.Models.LearnerCourse

<h3 class="text-danger mb-3">Are you sure you want to delete this?</h3>
<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div id="progressbarwizard">

        <div class="tab-content mb-0 b-0">

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.InstitutionName):</b>
                        <div>
                            @Html.DisplayFor(model => model.InstitutionName)
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.CourseName):</b>
                        <div>
                            @Html.DisplayFor(model => model.CourseName)
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.DateOfCompletion):</b>
                        <div>
                            @Html.DisplayFor(model => model.DateOfCompletion)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <input type="hidden" asp-for="LearnerCourseId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger mr-1"/>
    </div>
</form>