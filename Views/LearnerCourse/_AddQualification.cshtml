@model learner_portal.Models.LearnerCourse

 <form asp-action="Create" asp-controller="LearnerCourse" > 
     <div id="kt_repeater_1">
         <div class="row">
             <div class="form-group row align-items-center">
                     <div class="col-md-12">
                         <label>Institution Name</label>
                         <input type="text" asp-for="InstitutionName" class="form-control"  placeholder="Enter Institution Name"/>
                         <span asp-validation-for="InstitutionName" class="text-danger"></span>
                         <div class="d-md-none mb-2"></div>
                     </div>
                     <div class="col-md-12">
                         <label>Qualification Name</label>
                         <input type="text" class="form-control" asp-for="CourseName"  placeholder="Enter Qualification Name"/>
                         <span asp-validation-for="CourseName" class="text-danger"></span>
                         <div class="d-md-none mb-2"></div>
                     </div>
                     <div class="col-md-12">
                         <label>Completion Date</label>
                         <input type="date" class="form-control" asp-for="DateOfCompletion" required/>
                         <span asp-validation-for="DateOfCompletion" class="text-danger"></span>
                     </div>
                 </div>
             </div>
         <div class="row  ">
             <div class="col-md-6 mt-6 float-left">
                 <input type="submit" value="Save" class="btn btn-block btn-primary font-weight-bolder btn-light-success"/>
             </div>
             <div class="col-md-6 mt-6 float-right">
                 <a href="javascript:;" data-repeater-delete="" class="btn  btn-block font-weight-bolder btn-light-danger">
                     Delete 
                 </a>
             </div> 
         </div>
         @*<div class="form-group row">
            <div class="col-lg-4 float-left">
                <a href="javascript:;" data-repeater-create="" class="btn btn-sm font-weight-bolder btn-light-dark">
                    <i class="la la-plus"></i>Add Qualification
                </a>
            </div>
        </div>*@
     </div>

 </form> 


