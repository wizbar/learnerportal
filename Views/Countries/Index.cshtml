@{
    Layout = "_Layout";
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <h4 class="mt-8">Countries</h4>
    </div>
    <div class="card-body">
        <table id="allCountries" class="table ">
            <thead>
            <tr>
                <div class="form-actions no-color col-md-3 float-left">
                    <button class="btn btn-primary btn-sm mb-2 btn-rounded" onclick="showInPopUp('@Url.Action("Create", "Countries", null, Context.Request.Scheme)', 'Add Country')" id="btnCreate"><i class="fa fa-plus"></i>Create Country</button>
                </div>
            </tr>
            <tr>
                <th>ID</th>
                <th>Country Code</th>
                <th>Country Name</th>
                <th>Action</th>
            </tr>
            </thead>

        </table>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#divProcessing").hide();

        createCountriesDataTable('allCountries', '/Countries/GetAllCountries');

        // Hide the "busy" Gif at load:


    });


</script>