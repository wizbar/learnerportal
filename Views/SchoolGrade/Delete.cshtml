@model learner_portal.Models.SchoolGrade

<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div id="progressbarwizard">

        <div class="tab-content mb-0 b-0">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.SchoolGradeCode):</b>
                        <div class="form-control form-control-feedback h-auto p-3">
                            @Html.DisplayFor(model => model.SchoolGradeCode)
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.SchoolGradeName):</b>
                        <div class="form-control form-control-feedback h-auto p-3">
                            @Html.DisplayFor(model => model.SchoolGradeName)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="SchoolGradeId"/>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger mr-1"/>
    </div>
</form>