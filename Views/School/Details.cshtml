@model learner_portal.DTO.SchoolDTO

            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div id="progressbarwizard">

                    <div class="tab-content mb-0 b-0">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <b>@Html.DisplayNameFor(model => model.SchoolCode):</b>
                                    <div class="form-control form-control-feedback h-auto p-3">
                                        @Html.DisplayFor(model => model.SchoolCode)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <b>@Html.DisplayNameFor(model => model.EmisNo):</b>
                                    <div class="form-control form-control-feedback h-auto p-3">
                                        @Html.DisplayFor(model => model.EmisNo)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <b>@Html.DisplayNameFor(model => model.SchoolName):</b>
                                    <div class="form-control form-control-feedback h-auto p-3">
                                        @Html.DisplayFor(model => model.SchoolName)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" class="btn btn-success mr-1" asp-route-id="@Model.EmisNo">Edit</a>
                </div>
            </form>