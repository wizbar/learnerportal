@model learner_portal.Models.City

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-12">
            <b>City Name</b>
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <b>City Code</b>
            <input asp-for="CityCode" class="form-control" />
            <span asp-validation-for="CityCode" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <b>Province</b>
            <select asp-for="ProvinceId" class ="form-control" asp-items="ViewBag.ProvinceId"></select>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>