@model learner_portal.Models.City

<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div id="progressbarwizard">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.CityCode):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.CityCode)
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.CityName):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.CityName)
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.ProvinceId):</b>
                    <div class="form-control form-control-feedback h-auto p-3">
                        @Html.DisplayFor(model => model.Province.ProvinceName)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="CityId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger mr-1" />
    </div>
</form>
